// RUN: main 2 -> 1
// RUN: main 3 -> 1
// RUN: main 32 -> 1
// RUN: main -4 -> -4
Int main(Int x) {
  Int y = x;
  do {
    // CHECK: bool __wns_if_temp0 = false
    // CHECK-NEXT: {
    // CHECK-NEXT: __wns_if_temp0 = (y < 2);
    // CHECK-NEXT: }
    // CHECK-NEXT: __wns_if_temp1 = false;
    // CHECK-NEXT: {
    // CHECK-NEXT: __wns_if_temp1 = __wns_if_temp0;
    // CHECK-NEXT: }
    // CHECK-NEXT: if (__wns_if_temp1) {
    // CHECK-NEXT: {
    // CHECK-NEXT: break;
    // CHECK-NEXT: }
    // CHECK-NEXT: }

    if (y < 2) {
      break;
    }
    y = y / 2;
  } while(true);
  return y;
}
